@model IEnumerable<PozoristeNaDlanuTemplate.Models.Rezervacija>

@{
    ViewBag.Title = "ListaRezervacija";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>ListaRezervacija</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.naslovPredstave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brojKarata)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sjedista)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.placeno)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.naslovPredstave)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.brojKarata)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.sjedistastring)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.placeno)
    </td>
    <td>
        @Html.ActionLink("Otkazi rezervaciju", "Delete", new { id = item.idRezervacija })
    </td>
</tr>
}

</table>
