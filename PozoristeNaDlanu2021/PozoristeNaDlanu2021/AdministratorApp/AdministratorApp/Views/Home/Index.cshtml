                    <img src="~/images/BANJALUCKO-POZORISTE.jpg" alt="" style="width:100%;">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/slajd0.png" alt="" style="width:100%;">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/slajd1.jpg" alt="" style="width:100%;">
                    <div class="carousel-caption">
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>
    <!-- //banner-slider-->
    <!-- main-slider -->
    <!--grids-sec1-->


    <section class="w3l-blog-single">
        <div class="single blog py-5">
            <div class="container py-lg-4">
                <div style="margin: 8px auto; display: block; text-align:center;">

                    <!---728x90--->


                </div>
                <div class="title-content text-left">
                    <h3 class="hny-title">Vijesti:</h3>
                </div>
                <div class="d-grid grid-colunm-2 mt-lg-5 mt-4">
                    <!-- left side blog post content -->
                    <div class="single-left">
                        @Html.ActionLink("Kreiraj novu vijest", "VijestCreate")
                        @foreach (var item in Model)
                        {
                            <div class="single-left1">
                                <div class="blg-img">
                                    <td>

                                        <img src="@Url.Content(item.slikeVijesti.FirstOrDefault())" />

                                    </td>

                                </div>

                                <div class="btom-cont">
                                    <h4><span class="fa fa-clock-o mr-1" aria-hidden="true"></span> @item.datum</h4>
                                    <h5 class="card-title">
                                        @Html.ActionLink(item.naslov, "VijestDetails", new { idVijesti = item.idVijesti }, null) |
                                        @Html.ActionLink("Edit", "VijestEdit", new { id = item.idVijesti }) |
                                        @Html.ActionLink("Delete", "VijestDelete", new { id = item.idVijesti })
                                    </h5>

                                    <p class="">
                                        @item.opis
                                    </p>
                                    <ul class="admin-post">

                                        <li>
                                            <a href="/Home/VijestDetails/@item.idVijesti"><span class="fa fa-user"></span> Admin</a>
                                        </li>
                                    </ul>

                                </div>
                            </div>
                        }

                    </div>
                </div>
    </section>
