                            </div>

                            <div class="column price-number text-md-right">
                                @Html.ActionLink("Dodaj predstavu", "DodajPredstavGlumcu", new { idGlumac = Model.idGlumac, idPredstava=item.id })
                            </div>
                        </div>
                    </div>
                    <!--/box-->
                    <!--/box-->
